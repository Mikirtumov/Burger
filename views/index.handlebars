<div class="jumbotron jumbotron-fluid">
  <div class="container">
      <h1 class="ml15">
  <span class="word">EAT</span>
  <br>
  <span class="word">DA</span>
  <br>
  <span class="word">BURGER!!!</span>
</h1>
    
    
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm">
      <div class="col-xs-12 text-center" id="top-bar">
            <h2>Enter in burger you would like to eat!</h2>
        </div>
        <div class="col-xs-12 text-center enter_section">
            <form action="/burgers/create" method="POST">
                <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="test-center-button">SUBMIT</button>
            </form>
            <p></p>
        </div>
    </div>
    


    <div class="col-sm">
       <div class="col-xs-6 text-center" class="task">
            <div class="row">
                {{#each burger_data}}

                {{#unless this.devoured}}
                <div class="container">
  <div class="row">
    <div class="col-sm">
      <div class="col-xs-9 text-center">
                    <span class="newBurger">{{this.id}}. {{this.burger_name}}</span>
                </div>
    </div>
    <div class="col-sm">
        <div class="col-xs-3 text-center">
                    <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                        <input type="hidden" name="burger_id" type="text" value="{{this.id }}">
                        <button type="submit" class="btn btn-outline-dark">  DEVOUR IT!!!</button>
                    </form>

                </div>
    </div>
  </div>
</div>
               
             
                {{/unless}}
                {{/each}}
            </div>
        </div>
    </div>
    <div class="col-sm">
      <div class="col-xs-6 text-center" class="task">
            {{#each burger_data}}
            {{#if this.devoured}}
            <input class="from-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>
    </div>
  </div>
</div>
